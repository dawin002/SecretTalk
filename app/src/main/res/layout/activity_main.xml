<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/black"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/ImageView_secrettalk"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_gravity="center|top"
        android:src="@drawable/icon_mainlogo"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"/>
    <Button
        android:id="@+id/Btn_mychat"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:background="@drawable/btn_backgoround"
        android:clickable="true"
        android:text="내 채팅방 리스트"
        android:fontFamily="@font/sebang_gothic"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="22sp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"/>
    <Button
        android:id="@+id/Btn_searchchat"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:background="@drawable/btn_backgoround2"
        android:fontFamily="@font/sebang_gothic"
        android:clickable="true"
        android:text="새로운 채팅방 찾기"
        android:textColor="@color/white"
        android:textSize="22sp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"/>

    <Button
        android:id="@+id/Btn_mypage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="30dp"
        android:background="@drawable/icon_profile"
        android:clickable="true"/>

</LinearLayout>