<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/black"
    android:gravity="center"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_gravity="center|top"
        android:src="@drawable/icon_mainlogo"/>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/imageView2"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:text="School Certification"
        android:textColor="@color/white"
        android:fontFamily="@font/sebang_gothic_bold"
        android:textSize="22sp"
        android:gravity="center"
        android:layout_marginBottom="10dp">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/textView"
            android:layout_width="81dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/sebang_gothic_bold"
            android:gravity="center"
            android:text="이메일 주소"
            android:textColor="@color/white"
            android:textSize="15dp" />
        <EditText
            android:id="@+id/EditText_address"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="@drawable/border"
            android:gravity="center"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/textView3"
            android:layout_width="149dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/sebang_gothic"
            android:text=" @ ynu.ac.kr"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>
    <Button
        android:id="@+id/Btn_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:text="보 내 기"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:fontFamily="@font/sebang_gothic_bold"
        android:background="@drawable/btn_backgoround2"
        android:layout_marginBottom="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:fontFamily="@font/sebang_gothic_bold"
            android:gravity="center"
            android:text=" 확인 코드   "
            android:textColor="@color/white"
            android:textSize="15dp" />
        <EditText
            android:id="@+id/EditText_verifycode"
            android:layout_weight="7"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:textColor="@color/white"
            android:background="@drawable/border"
            android:gravity="center"
            android:layout_gravity="center"/>
    </LinearLayout>

    <Button
        android:id="@+id/Btn_verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:text="확 인"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:fontFamily="@font/sebang_gothic_bold"
        android:background="@drawable/btn_backgoround2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="150dp"/>
</LinearLayout>