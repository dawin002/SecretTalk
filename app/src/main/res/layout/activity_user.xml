<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/black"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/ImageView_secrettalk"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_gravity="center|top"
        android:src="@drawable/icon_mainlogo"/>
    <TextView
        android:id="@+id/imageView2"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:text="My Page"
        android:textColor="@color/white"
        android:fontFamily="@font/sebang_gothic_bold"
        android:textSize="22sp"
        android:gravity="center"
        tools:ignore="RtlCompat">
    </TextView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8sp"
        android:layout_marginTop="15sp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:fontFamily="@font/sebang_gothic"
            android:gravity="center"
            android:text="이름"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="8sp"
            android:fontFamily="@font/sebang_gothic"
            android:gravity="center"
            android:text="ID"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="8sp"
            android:fontFamily="@font/sebang_gothic"
            android:gravity="center"
            android:text="학과"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="8sp"
            android:fontFamily="@font/sebang_gothic"
            android:gravity="center"
            android:text="학번"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="8sp"
            android:fontFamily="@font/sebang_gothic"
            android:gravity="center"
            android:text="휴대폰 번호"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="8sp"
            android:fontFamily="@font/sebang_gothic"
            android:gravity="center"
            android:text="이메일 주소"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="8sp"
            android:fontFamily="@font/sebang_gothic"
            android:gravity="center"
            android:text="성별"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="8sp"
            android:fontFamily="@font/sebang_gothic"
            android:gravity="center"
            android:text="학교인증"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="8sp"
            android:fontFamily="@font/sebang_gothic"
            android:gravity="center"
            android:text="닉네임"
            android:textColor="@color/white"
            android:textSize="18dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15sp">
        <TextView
            android:textColor="@color/white"
            android:textSize="13dp"
            android:gravity="center|left"
            android:id="@+id/TextView_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/border"/>
        <TextView
            android:textColor="@color/white"
            android:textSize="13dp"
            android:gravity="center|left"
            android:id="@+id/TextView_id"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="8sp"
            android:background="@drawable/border"/>
        <TextView
            android:textColor="@color/white"
            android:textSize="13dp"
            android:gravity="center|left"
            android:id="@+id/TextView_dept"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="8sp"
            android:background="@drawable/border"/>
        <TextView
            android:textColor="@color/white"
            android:textSize="13dp"
            android:gravity="center|left"
            android:id="@+id/TextView_studentid"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="8sp"
            android:background="@drawable/border"/>
        <TextView
            android:textColor="@color/white"
            android:textSize="13dp"
            android:gravity="center|left"
            android:id="@+id/TextView_phonenumber"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="8sp"
            android:background="@drawable/border"/>
        <TextView
            android:textColor="@color/white"
            android:textSize="13dp"
            android:gravity="center|left"
            android:id="@+id/TextView_email"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="8sp"
            android:background="@drawable/border"/>
        <TextView
            android:textColor="@color/white"
            android:textSize="13dp"
            android:gravity="center|left"
            android:id="@+id/TextView_gender"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="8sp"
            android:background="@drawable/border"/>
        <TextView
            android:textColor="@color/white"
            android:textSize="13dp"
            android:gravity="center|left"
            android:id="@+id/TextView_iscertified"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="8sp"
            android:background="@drawable/border"/>
        <EditText
            android:textColor="@color/white"
            android:textSize="13dp"
            android:gravity="center|left"
            android:id="@+id/EditText_nickname"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="8sp"
            android:background="@drawable/border"/>
    </LinearLayout>

</LinearLayout>
    <Button
        android:id="@+id/Btn_schoolcertifiation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:text="학 교 인 증"
        android:textSize="15dp"
        android:fontFamily="@font/sebang_gothic"
        android:textColor="@color/white"
        android:background="@drawable/btn_backgoround3"
        android:layout_marginBottom="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:weightSum="10">
        <Button
            android:id="@+id/Btn_modify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="수 정 하 기"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:fontFamily="@font/sebang_gothic_bold"
            android:background="@drawable/btn_backgoround2"/>
        <Button
            android:id="@+id/Btn_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_gravity="left"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="로 그 아 웃"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:fontFamily="@font/sebang_gothic_bold"
            android:background="@drawable/btn_backgoround2"/>
    </LinearLayout>
</LinearLayout>
