<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/black"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/ImageView_secrettalk"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_gravity="center|top"
        android:layout_marginBottom="10dp"
        android:src="@drawable/icon_mainlogo" />
    <TextView
        android:id="@+id/imageView2"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:background="@null"
        android:gravity="center"
        android:text="새로운 채팅방 찾기"
        android:textColor="@color/white"
        android:fontFamily="@font/sebang_gothic_bold"
        android:layout_marginBottom="10dp"
        android:textSize="22sp">
        </TextView>
    <Button
        android:id="@+id/Button_ClubChatList"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="동아리 채팅방 리스트"
        android:layout_margin="10dp"
        android:fontFamily="@font/sebang_gothic_otf"
        android:background="@drawable/btn_backgoround4"
        />
    <Button
        android:id="@+id/Button_UniversityChatList"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="단과대 채팅방 리스트"
        android:layout_margin="10dp"
        android:fontFamily="@font/sebang_gothic_otf"
        android:background="@drawable/btn_backgoround4"
        />
    <Button
        android:id="@+id/Button_SearchChatList"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:text="채팅방 검색하기"
        android:layout_margin="10dp"
        android:fontFamily="@font/sebang_gothic_otf"
        android:background="@drawable/btn_backgoround4"
        />
</LinearLayout>
